<article>
    <a href="/dashboard" id="">&larr; back to dashboard</a>
    <h2 class="title">Edit Post</h2><hr>
    <form class="edit-post-form">
        <div>
            <label for="post-title">Post Title:</label>
            <input class="input" name="post-content" type="text" value="{{post.title}}"/>
        </div>
        <div>
            <label for="post-content">Post Content:</label>
            <input class="textarea" name="post-content" type="text" value="{{post.post_content}}"/>
        </div>
        <div class="">
            Created by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit" class="">Save Post</button>
        <button type="button" class="">Delete Post</button>
     </form>
</article>

{{> comments post.comments}}

<script src="/js/edit-post"></script>
<script src="/js/delete-post"></script>
<script src="/js/comment"></script>